<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#204051">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:paddingTop="120dp" tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="385dp" app:cardBackgroundColor="#3B6978"
                android:paddingBottom="30dp"
                app:cardCornerRadius="30dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout2" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="70dp" android:layout_marginTop="60dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_24px"
                            android:id="@+id/imageView" tools:ignore="VectorDrawableCompat"/>
                </FrameLayout>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                        android:paddingTop="30dp" android:text="@string/email"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/editText2"
                        android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                        android:paddingTop="30dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
                android:text="@string/siguiente"
                android:layout_width="match_parent"
                android:layout_height="58dp" android:id="@+id/button"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/rounded_corners"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>