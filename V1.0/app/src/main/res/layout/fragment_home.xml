<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cifrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_h_m"
            android:layout_marginTop="70dp"
            android:background="@drawable/custom_button"
            android:onClick="startBackup"
            android:text="Cifrar"
            app:backgroundTint="@color/button_font_negative" />

    <Button
        android:id="@+id/btn_decifrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/button_h_m"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button"
        android:text="Decifrar"
        app:backgroundTint="@color/button_font_negative" />

        <Button
            android:id="@+id/btn_decifrar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_h_m"
            android:layout_marginTop="70dp"
            android:background="@drawable/custom_button"
            android:onClick="uploadBackup"
            android:text="upload"
            app:backgroundTint="@color/button_font_negative" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>