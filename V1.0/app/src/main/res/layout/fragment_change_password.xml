<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/background_negative"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_font"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Contrase単a anterior"
            android:textColor="@color/button_font"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/txt_new_passl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/button_font"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Nueva contrase単a"
            android:textColor="@color/button_font"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/txt_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/button_font"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Confirmar contrase単a"
            android:textColor="@color/button_font"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_change_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_negative"
            android:layout_marginTop="190dp"
            android:layout_marginHorizontal="60dp"
            android:textColor="@color/button_font_negative"
            android:text="Cambiar contrase単a" />
    </LinearLayout>

</FrameLayout>